<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back"></ImageView>


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/countdown"
        android:text="0:00"
        android:textColor="@color/main_bordue"
        android:textSize="40sp"
        android:layout_height="wrap_content"></TextView>

    <Button
        android:id="@+id/hole_1"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_below="@+id/countdown"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="515dp"
        android:background="@drawable/hole"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countdown"></Button>

    <Button
        android:id="@+id/hole_2"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignBottom="@id/hole_1"
        android:layout_alignRight="@id/hole_3"
        android:background="@drawable/hole"></Button>

    <Button
        android:id="@+id/hole_3"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/hole"></Button>

    <Button
        android:id="@+id/hole_4"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignBottom="@id/hole_3"
        android:layout_alignRight="@id/hole_1"
        android:background="@drawable/hole"></Button>

    <Button
        android:id="@+id/hole_5"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignBottom="@id/hole_6"
        android:layout_alignRight="@id/hole_3"
        android:background="@drawable/hole"></Button>

    <Button
        android:id="@+id/hole_6"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_below="@+id/countdown"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="458dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/hole"></Button>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hole_2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="204dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="31dp"
        android:layout_toEndOf="@+id/countdown"
        android:text="0"
        android:textColor="@color/main_bordue"
        android:textSize="40sp" />

</RelativeLayout>